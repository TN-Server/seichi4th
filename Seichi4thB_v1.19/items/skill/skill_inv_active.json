{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "seichi:skill_inv_active"
    },
    "components": {
      "minecraft:render_offsets": "miscellaneous",
      "minecraft:icon": {
        "texture": "skill_inv"
      },
      "minecraft:max_stack_size": 1,
      "minecraft:can_destroy_in_creative": false,
      "minecraft:foil": true,
      "minecraft:on_use": {
        "on_use": {
          "event": "seichi:skill_inv_active"
        }
      }
    },
    "events": {
      "seichi:skill_inv_active": {
        "run_command": {
          "command": [
            "tag @s remove inv",
            "replaceitem entity @s slot.weapon.mainhand 0 seichi:skill_inv"
          ],
          "target": "self"
        }
      }
    }
  }
}